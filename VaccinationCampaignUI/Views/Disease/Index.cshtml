@model IEnumerable<VaccinationCampaignUI.Models.Disease>

@{
    ViewData["Title"] = "Disease";
}

<h1>Болезни</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Код
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameDis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form method="post">
                    <input asp-action="Delete" asp-controller="Disease" type="submit" asp-route-id="@item.Id" value="Удалить">
                </form>

            </td>
        </tr>
        }
    </tbody>
</table>
