@model IEnumerable<VaccinationCampaignUI.Models.Disease>;

<table>
    <tr>
        <td>id</td>
        <td>Код</td>
        <td>Название</td>
    </tr>
    @foreach (var disease in Model)
    {
        <tr>
            <td>@disease.Id</td>
            <td>@disease.Code</td>
            <td>@disease.NameDis</td>
            <td>
                <form method="post">
                    <input asp-action="Delete" asp-controller="Disease" type="submit" asp-route-id="@disease.Id" value="Delete" />
                </form>
                <form method="get">
                    <input asp-action="Edit" type="submit" name="Id" asp-route-id="@disease.Id" value="Edit" />
                </form>
            </td>
        </tr>

    }
</table>
