@model VaccinationCampaignUI.ViewModels.VaccineViewModel;

<form method="post">
    <label>Болезнь</label>
    <select name="diseaseId" asp-items="@(new SelectList(Model.Diseases, "Id", "Name"))"></select>
    <br />
    <label>Описание</label>
    <input type="text" name="DescriptionVacc" value="@Model.DescriptionVacc" />
    <br />
    <label>Доза</label>
    <input type="text" name="Dose" value="@Model.Dose" />
    <br />
    <label>Производитель</label>
    <input type="text" name="Manufacturer" value="@Model.Manufacturer" />
    <br />

    <input type="submit" asp-action="Edit" asp-controller="Vaccine" value="Edit" />
</form>