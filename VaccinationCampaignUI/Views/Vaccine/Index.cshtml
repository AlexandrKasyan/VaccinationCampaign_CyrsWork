@model IEnumerable<VaccinationCampaignUI.Models.Vaccine>

@{
    ViewData["Title"] = "Vaccine";
}

<h1>Вакцины</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Болезнь
            </th>
            <th>
                Описание
            </th>
            <th>
                Доза
            </th>
            <th>
                Производитель
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Diseases.NameDis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescriptionVacc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dose)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                </td>
                <td>
                    <form method="post">
                        <input asp-action="Delete" asp-controller="Vaccine" type="submit" asp-route-id="@item.Id" value="Удалить">
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
