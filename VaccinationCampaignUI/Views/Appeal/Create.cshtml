@model VaccinationCampaignUI.ViewModels.AppealViewModel;

<form method="post">
    <label>Пациент</label>
    <br />
    <select name="patientId" asp-items="@(new SelectList(Model.Patient, "Id", "Name"))"></select>
    <br />

    <label>Описание</label>
    <br />
    <input type="text" name="Description" value="" />
    <br />

    <label>Рекомендации</label>
    <br />
    <input type="text" name="Recommendation" value="" />
    <br />

    <label>Врач</label>
    <br />
    <input type="text" name="Doctor" value="" />
    <br />
    <label for="localdate">Дата и время: </label>
    <input type="datetime-local" name="Data" value="" />
    <br />

    <input type="submit" asp-action="Create" asp-controller="Appeal" value="Create" />
</form>