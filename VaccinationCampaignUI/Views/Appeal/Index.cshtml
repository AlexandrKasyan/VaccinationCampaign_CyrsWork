@model IEnumerable<VaccinationCampaignUI.Models.Appeal>;

<table>
    <tr>
        <td>id</td>
        <td>idПациента</td>
        <td>Жалоба</td>
        <td>Рекомендация</td>
        <td>Врач</td>
        <td>Дата</td>
        <td></td>
    </tr>
    @foreach (var appeal in Model)
    {
        <tr>
            <td>@appeal.Id</td>
            <td>@appeal.PatientId</td>
            <td>@appeal.Description</td>
            <td>@appeal.Recommendation</td>
            <td>@appeal.Doctor</td>
            <td>@appeal.Data</td>

            <td>
                <form method="post">
                    <input asp-action="Delete" asp-controller="Appeal" type="submit" asp-route-id="@appeal.Id" value="Delete" />
                </form>
                <form method="get">
                    <input asp-action="Edit" type="submit" name="Id" asp-route-id="@appeal.Id" value="Edit" />
                </form>
            </td>
        </tr>

    }
</table>
