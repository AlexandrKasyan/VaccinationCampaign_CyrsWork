@model IEnumerable<VaccinationCampaignUI.Models.MedicalInstitution>

@{
    ViewData["Title"] = "MedicalInstitution";
}

<h1>Мединституты</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Адресс
            </th>
            <th>
                Номер обращения
            </th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameMedInst)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdressMedInst)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppealId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                </td>
                <td>
                    
                    <form method="post">
                        <input asp-action="Delete" asp-controller="MedicalInstitution" type="submit" asp-route-id="@item.Id" value="Удалить">
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
