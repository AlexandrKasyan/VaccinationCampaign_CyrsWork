@model VaccinationCampaignUI.ViewModels.PatientViewModel;

<form method="post">
    <label>Имя</label>
    <br />
    <input type="text" name="name" value="" />
    <br />

    <label>Фамилия </label>
    <br />
    <input type="text" name="lastName" value="" />
    <br />

    <label>Пол </label>
    <p>
        <select name="sex">
            <option selected="selected">Выберите пол</option>
            <option value="false">Женский</option>
            <option value="true">Мужской</option>
        </select>
    </p>
    <br />

    <label>Паспорт</label>
    <br />
    <input type="text" name="passport" value="" />
    <br />

    <label>Адресс</label>

    <select name="addressId" asp-items="@(new SelectList(Model.Addreses, "Id", "Name"))"></select>
    <br />


    <input type="submit" asp-action="Create" asp-controller="Patient" value="Create" />
</form>