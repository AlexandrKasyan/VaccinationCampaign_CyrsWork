@model VaccinationCampaignUI.ViewModels.PatientVaccinations;

@{
    ViewData["Title"] = "Vaccination";
}

<h1>Вакцинации</h1>
<h1>@Model.LastName @Model.Name </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Название вакцины
            </th>
            <th>
                Дата
            </th>
            <th>
                Номер дозы
            </th>
            <th>
                Мединститут
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Vaccinations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameVaccine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VaccineId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Institution.NameMedInst)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                </td>
                <td>
                    <form method="post">
                        <input asp-action="Delete" asp-controller="Vaccination" type="submit" asp-route-id="@item.Id" value="Удалить">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
