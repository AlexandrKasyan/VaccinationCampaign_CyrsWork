@model IEnumerable<VaccinationCampaignUI.Models.Address>

@{
    ViewData["Title"] = "Address";
}

<h1>Адреса</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Страна
            </th>
            <th>
                Регион
            </th>
            <th>
                Город
            </th>
            <th>
                Дом
            </th>
            <th>
                Квартира
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Coutry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hous)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                
                <form method="post">
                    <input asp-action="Delete" asp-controller="Address" type="submit" asp-route-id="@item.Id" value="Удалить">
                </form>

            </td>
        </tr>
        }
    </tbody>
</table>
